@using CleanArchitecture.Blazor.ViewModels.Game

@page "/game/add"

@inject NavigationManager Navigation
@inject IGamesClient GamesClient
@inject IGenresClient GenresClient
@inject ILogger<CreateGame> Logger


@code
{
    [Inject]
    [SupplyParameterFromForm]
    private CreateGameViewModel ViewModel { get; set; }



    #region Overrides

    //Called When Component is ready to start and its parameters was set
    protected override void OnInitialized()
    {
        //Set Default Values for Form
        if (ViewModel.CreatedGame is null)
        {
            ViewModel.CreatedGame = new GameModel
            {
                Name = "Test",
                Genre = new GenreModel { Id = -1 },
                Price = 200,
                Year = 2024
            };
        }

        if(ViewModel.GenresList is null)
        {
            ViewModel.GenresList = GenresClient.GetGameGenres();
        }
    }

    #endregion

    #region Form Events

    private void HandleNewForm()
    {
        Logger.LogInformation($"(Created)=> Name={ViewModel.CreatedGame.Name} , Genre={ViewModel.CreatedGame.Genre.Id} , Price={ViewModel.CreatedGame.Price} ,Year={ViewModel.CreatedGame.Year}");

        GamesClient.AddGame(ViewModel.CreatedGame.Name, ViewModel.CreatedGame.Genre.Id, ViewModel.CreatedGame.Price, ViewModel.CreatedGame.Year);

        Navigation.NavigateTo("/game/list");
    }

    #endregion

}

<PageTitle>New Game</PageTitle>

<h3>New Game</h3>

<EditForm class="row g-3" Model="ViewModel"  FormName="FormNewGame" OnSubmit="HandleNewForm">

    <div class="col-12">
        <label for="txtName" class="form-label">Name</label>
        <InputText id="txtName" @bind-Value="ViewModel.CreatedGame.Name" class="form-control" placeholder="Name" />
    </div>

    <div class="col-md-4">
        <label for="cboGenre" class="form-label">Genre</label>
        <InputSelect id="cboGenre" class="form-select" @bind-Value="ViewModel.CreatedGame.Genre.Id">
            <option value="-1" selected>Select...</option>

            @foreach (var genre in ViewModel.GenresList!)
            {
                <option value="@genre.Id">@genre.Name</option>
            }

        </InputSelect>
    </div>

    <div class="col-md-4">
        <label for="txtPrice" class="form-label">Price</label>
        <InputNumber id="txtPrice" class="form-control" @bind-Value="ViewModel.CreatedGame.Price" />
    </div>

    <div class="col-md-4">
        <label for="txtYear" class="form-label">Year</label>
        <InputNumber id="txtYear" class="form-control" @bind-Value="ViewModel.CreatedGame.Year" />
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary" role="button">Save</button>
        <a class="btn btn-secondary" role="button" href="game/list">Cancel</a>
    </div>

</EditForm>
