<ul class="navbar nav">
    @if (User.Identity!.IsAuthenticated)
    {
        //If User Logged in then Display his name and another button to can logout

        <li class="nav-item">
            <a class="nav-link" href="#" title="Manage">@User.Identity.Name - @User.Identity.AuthenticationType</a>
        </li>

        <li class="nav-item">
            @* ReSharper disable once UnknownCssClass *@
            <form class="form-inline" method="post" asp-action="Logout" asp-controller="Account" asp-route="@Url.Action("Index","Home")" >
                <button type="submit" class="nav-link btn btn-link">
                    Logout
                </button>
            </form>
            <a class="nav-link" href="#" title="Manage">@User.Identity.Name - @User.Identity.AuthenticationType</a>
        </li>
    }
    else
    {
        //if user not logged in then display button for register or login
        <li class="nav-item">
            <a class="btn btn-outline-primary" title="Register" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li>&nbsp;</li>
        <li class="nav-item">
            <a class="btn btn-success" title="Login" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>